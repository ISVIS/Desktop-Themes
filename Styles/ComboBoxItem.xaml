<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:Isvis.Windows.Themes">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Isvis.Windows.Themes;component/Resources/ComboBoxItem.xaml" />
        <ResourceDictionary Source="/Isvis.Windows.Themes;component/Styles/ListBoxItem.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="ComboBoxItemStyle"
           TargetType="{x:Type ListBoxItem}"
           BasedOn="{StaticResource ListBoxItemStyle}">
        <Setter Property="Margin"
                Value="{StaticResource ComboBoxItemMarginThemeThickness}" />
        <Setter Property="Padding"
                Value="{StaticResource ComboBoxItemPaddingThemeThickness}" />
    </Style>
</ResourceDictionary>