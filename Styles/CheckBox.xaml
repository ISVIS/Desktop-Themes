<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:Isvis.Windows.Themes">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Isvis.Windows.Themes;component/Resources/Control.xaml" />
        <ResourceDictionary Source="/Isvis.Windows.Themes;component/Resources/CheckBox.xaml" />
        <ResourceDictionary Source="Control.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="CheckBoxStyle"
           TargetType="{x:Type Control}"
           BasedOn="{StaticResource ControlStyle}">
        <Setter Property="themes:ControlTheme.Width"
                Value="{StaticResource CheckBoxThemeWidth}" />
        <Setter Property="themes:ControlTheme.Height"
                Value="{StaticResource CheckBoxThemeHeight}" />
        <Setter Property="themes:ControlTheme.Padding"
                Value="{StaticResource CheckBoxTickPaddingThemeThickness}" />
    </Style>
</ResourceDictionary>