<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:Isvis.Windows.Themes">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Isvis.Windows.Themes;component/Resources/Control.xaml" />
        <ResourceDictionary Source="/Isvis.Windows.Themes;component/Resources/Button.xaml" />
        <ResourceDictionary Source="Control.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="ButtonStyle"
           TargetType="{x:Type Control}"
           BasedOn="{StaticResource ControlStyle}" />
</ResourceDictionary>