<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:Isvis.Windows.Themes">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Isvis.Windows.Themes;component/Resources/Control.xaml" />
        <ResourceDictionary Source="/Isvis.Windows.Themes;component/Resources/TextBox.xaml" />
        <ResourceDictionary Source="Control.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TextBoxStyle"
           TargetType="{x:Type Control}"
           BasedOn="{StaticResource ControlStyle}">

        <!-- PointerOver -->
        <Setter Property="themes:ControlTheme.PointerOverBackground"
                Value="{StaticResource ControlBackgroundThemeBrush}" />
    </Style>
</ResourceDictionary>